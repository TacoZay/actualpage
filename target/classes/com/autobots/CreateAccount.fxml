<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.autobots.CreateAccountController"
            stylesheets="@styles.css"
            prefWidth="650" prefHeight="450">

    <Label text="Create Account"
           layoutX="240" layoutY="30"
           style="-fx-font-size: 26px; -fx-font-weight: bold;"/>

    <Label text="Full Name:" layoutX="140" layoutY="120"/>
    <TextField fx:id="nameField" layoutX="260" layoutY="115" prefWidth="250"/>

    <Label text="Phone Number:" layoutX="140" layoutY="170"/>
    <TextField fx:id="phoneField" layoutX="260" layoutY="165" prefWidth="250"/>

    <Label text="Email:" layoutX="140" layoutY="220"/>
    <TextField fx:id="emailField" layoutX="260" layoutY="215" prefWidth="250"/>

    <Label text="Password:" layoutX="140" layoutY="270"/>
    <PasswordField fx:id="passwordField" layoutX="260" layoutY="265" prefWidth="250"/>

    <Button text="Create Account"
            layoutX="260" layoutY="320"
            prefWidth="250"
            onAction="#onCreateClicked"/>

    <Label fx:id="errorLabel"
           textFill="red"
           visible="false"
           layoutX="260" layoutY="365"/>

    <Button text="Back"
            layoutX="260" layoutY="395"
            prefWidth="250"
            onAction="#onBackClicked"/>
</AnchorPane>
