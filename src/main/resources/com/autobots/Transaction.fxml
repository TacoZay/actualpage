<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #F4F4F4;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.autobots.TransactionController">
   <children>
      <VBox alignment="CENTER" spacing="20.0" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100.0" AnchorPane.topAnchor="50.0" styleClass="card-pane">
         <children>
            <Label text="New Transaction" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
            
            <HBox spacing="10.0" alignment="CENTER_LEFT">
               <Label text="Select Pizza:" prefWidth="100.0" />
               <ComboBox fx:id="pizzaCombo" prefWidth="200.0" promptText="Choose a Pizza" onAction="#calculateTotal" />
            </HBox>

            <HBox spacing="10.0" alignment="CENTER_LEFT">
               <Label text="Tip Amount ($):" prefWidth="100.0" />
               <TextField fx:id="tipInput" promptText="0.00" onKeyTyped="#calculateTotal" />
            </HBox>

            <HBox spacing="10.0" alignment="CENTER_LEFT">
               <Label text="Pay With:" prefWidth="100.0" />
               <ComboBox fx:id="paymentCombo" prefWidth="200.0" promptText="Select a Card" />
            </HBox>

            <Label fx:id="totalLabel" text="Total: $0.00" style="-fx-font-size: 18px; -fx-text-fill: #2E7D32; -fx-font-weight: bold;" />

            <HBox spacing="20.0" alignment="CENTER">
               <Button text="Cancel" onAction="#onCancel" />
               <Button text="Place Order" style="-fx-background-color: #D32F2F; -fx-text-fill: white;" onAction="#onPlaceOrder" />
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>