<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" style="-fx-background-color: #F4F4F4; -fx-padding: 20;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.autobots.controller.AddCardController">
   <children>
      <VBox spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Add New Card" />
            
            <GridPane hgap="10.0" vgap="15.0">
               <children>
                  <Label text="Cardholder Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                  <TextField fx:id="holderInput" promptText="John Doe" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                  <Label text="Card Number:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                  <TextField fx:id="numberInput" promptText="0000 0000 0000 0000" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                  <Label text="Expiration (MM/YY):" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                  <TextField fx:id="expInput" promptText="12/26" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                  <Label text="CVV:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                  <TextField fx:id="cvvInput" promptText="123" GridPane.columnIndex="1" GridPane.rowIndex="3" />
               </children>
            </GridPane>

            <HBox alignment="CENTER_RIGHT" spacing="10.0">
               <children>
                  <Button text="Cancel" onAction="#onCancel" />
                  <Button style="-fx-background-color: #D32F2F; -fx-text-fill: white;" text="Save Card" onAction="#onSave" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>